<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form action="/getPatientBasicInfo" method="post">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <div class="text-center">
                                    <label for="email">ENTER PATIENT EMAIL ADDRESS</label>
                                </div>
                                <div class="text-center">
                                    <input type="text" class="form-control text-center" id="email"
                                           placeholder="abc@gmail.com"
                                           name="email" value={{email}}>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">SUBMIT</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
    <br>
    {{#if displayInfo}}
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <table class="table table-borderless">
                    <tbody>
                    <tr>
                        <td>PATIENT NAME</td>
                        <td>{{patient.name}}</td>
                    </tr>
                    <tr>
                        <td>PATIENT EMAIL</td>
                        <td>{{patient.email}}</td>
                    </tr>
                    <tr>
                        <td>PATIENT DATE OF BIRTH</td>
                        <td>{{patient.dateOfBirth}}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-3"></div>
        </div>
    {{/if}}
    <hr>
    <div class="row">
        <div class="col-md-3">
            <div class="text-center">
            <a href="/patient/"><button type="button" class="btn btn-success">ADD PATIENT</button></a>
            </div>
            <hr>
        </div>
        <div class="col-md-6"></div>
        <div class="col-md-3">
            {{#if displayInfo}}
            <div class="text-center">
                <a href="/patient/delete/{{patient.id}}"><button type="button" class="btn btn-danger">DELETE THE PATIENT</button></a>
            </div>
                <hr>
            {{/if}}
        </div>
    </div>
</div>