<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form action="/getPatientMedicalRecords" method="post">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <div class="text-center">
                                    <label for="email">ENTER PATIENT EMAIL ADDRESS</label>
                                </div>
                                <div class="text-center">
                                    <input type="text" class="form-control text-center" id="email"
                                           placeholder="abc@gmail.com"
                                           name="email" value={{email}}>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">SUBMIT</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
    {{#if displayInfo}}
        <hr>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="text-center">
                    <label for="email">MEDICAL RECORDS</label>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <table class="table table-sm">
                    <thead>
                    <tr>
                        <th scope="col">MEDICINE</th>
                        <th scope="col">DOCTOR</th>
                        <th scope="col">AMOUNT</th>
                        <th scope="col">DATE</th>
                        <th scope="col">ACTION</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each medicalRecords}}
                        <tr>
                            <td>{{this.medicine}}</td>
                            <td>{{this.doctor}}</td>
                            <td>{{this.amount}}</td>
                            <td>{{this.date}}</td>
                            <td>
                                <div class="text-center">
                                    <a href="/records/{{this.id}}/{{../patient_id}}"><button type="button" class="btn btn-danger">X</button></a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
            <div class="col-md-3"></div>
        </div>
        <hr>
    <div class="row">
        <div class="col-md-3">
            <div class="text-center">
            <a href="/records/{{patient_id}}"><button type="button" class="btn btn-success">+ ADD</button></a>
            </div>
            <hr>
        </div>
        <div class="col-md-6"></div>
        <div class="col-md-3"></div>
    </div>
    {{/if}}
</div>